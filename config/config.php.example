<?php
// Σύνδεση με τη βάση δεδομένων
// ΑΝΤΙΓΡΑΨΤΕ ΑΥΤΟ ΣΕ config.php ΚΑΙ ΑΛΛΑΞΤΕ ΤΙΣ ΤΙΜΕΣ

$host = 'localhost';  // Συνήθως 'localhost' στον server
$dbname = 'stoiximatiki';  // Όνομα της βάσης που δημιουργήσατε
$username = 'your_username';  // Το MySQL username σας
$password = 'your_password';  // Το MySQL password σας

try {
    $pdo = new PDO("mysql:host=$host;dbname=$dbname;charset=utf8mb4", $username, $password);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    $pdo->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::FETCH_ASSOC);
} catch(PDOException $e) {
    die("Σφάλμα σύνδεσης: " . $e->getMessage());
}
?>













